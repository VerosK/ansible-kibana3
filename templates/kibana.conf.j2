server {
	{% if default_server %}
	listen 80 default_server;
	{% else %}
	listen 80;
	{% endif %}
	server_name {{ server_name }} {% for name in hostnames %}{{ name }} {% endfor %};

    proxy_set_header  X-Real-IP  $remote_addr;

    root /opt/kibana-3/;

    location ~ ^/$ {
        return 302 $scheme://$http_host/web/; # temporary redirect
    }

	location /web/ {    # Kibana home
	    alias {{ kibana.dir }}/;
	}

    # based on https://github.com/elasticsearch/kibana/blob/master/sample/nginx.conf

	location /kibana-int/ {
        proxy_pass http://{{ with_elasticsearch }}:9200;
	}

    location ~ ^/.*/_aliases$ {
        if ($reqeust_method != GET) { return 403; }
        proxy_pass http://127.0.0.1:9200;
    }


    location ~ ^/_nodes{
        if ($request_method != GET) { return 403; }
        proxy_pass http://127.0.0.1:9200;

    }

}
